        android:handle="@+id/handle"
        android:visibility="invisible" >

        <include layout="@layout/sliding_handle" />

        <include layout="@layout/sliding_content" />
    </com.white.whitemusic.view.MySlidingDrawer>-->

</RelativeLayout>